{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "type": "prompt",
        "alignment": "left",
        "segments": [
          {
            "type": "python",
            "style": "plain",
            "foreground": "white",
            "properties": {
              "prefix": "(",
              "postfix": ")",
              "display_version": false
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "os",
            "style": "powerline",
            "foreground": "cyan",
            "properties": {
                "prefix": "",
                "postfix": " ",
                "wsl": "",
                "wsl_separator": ""
            }
          },
          {
            "type": "root",
            "style": "plain",
            "foreground": "#F3C267",
            "properties": {
              "root_icon": "%"
            }
          },
          {
            "type": "session",
            "style": "plain",
            "properties": {
              "user_info_separator": "<#737373>@</>",
              "prefix": "",
              "user_color": "cyan",
              "host_color": "green"
            }
          },
          {
            "type": "path",
            "style": "plain",
            "foreground": "#61AFEF",
            "properties": {
              "prefix": "\u279C ",
              // "prefix": "<#737373>in </>",
              "style": "full"
            }
          },
          {
            "type": "git",
            "style": "plain",
            "foreground": "#F3C267",
            "properties": {
              "branch_icon": "\uF126 ",
              "display_status": true,
              "branch_identical_icon": "\uF14A",
              "branch_gone_icon": "\u274E"
            }
          },
          {
            "type": "exit",
            "style": "plain",
            "foreground": "#C94A16",
            "properties": {
              "prefix": "x"
            }
          },
          {
            "type": "time",
            "style": "plain",
            "foreground": "#737373", //darkGray
            "properties": {
              "time_format": "15:04",
              "prefix": "[",
              "postfix": "]"
            }
          },
          {
          "type": "battery",
          "style": "powerline",
          "foreground": "#193549",
          "properties": {
              "battery_icon": "",
              "discharging_icon": "\uE231 ",
              "charging_icon": "\uE234 ",
              "charged_icon": "\uE22F ",
              "color_background": false,
              "charged_color": "#66BB6A",
              "charging_color": "#64B5F6",
              "discharging_color": "#E36464",
              "prefix": "\u005B",
              "postfix": "\uF295\u005D ",
              "display_charging": true
            }
          }
        ]
      },
      {
        "type": "prompt",
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "type": "text",
            "style": "plain",
            "foreground": "cyan", //lightRed
            "properties": {
              "prefix": "",
              "text": "$",
              "postfix": ""
            }
          }
        ]
      }
    ],
    "final_space": true
  }
